<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mizore.DBUtils.UserMapper">
    <select id="getUser" resultType="User" parameterType="String">
        select * from user where name =#{name}
    </select>
    <insert id="insertUser" parameterType="User">
        INSERT INTO user(name,password,money) VALUES (#{name},#{password},#{money})
    </insert>
    <delete id="deleteUser" parameterType="String">
        DELETE FROM user where name=#{0}
    </delete>
    <update id="updatePassword" parameterType="String">
        update user set password=#{1} where name=#{0}
    </update>
    <update id="updateMoney">
        update user set money=#{arg1} where name=#{arg0}
    </update>
</mapper>